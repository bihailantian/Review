<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:segmentedProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.SegmentedProgressActivity">

    <com.xxm.review.view.SegmentedProgressView

        android:layout_margin="10dp"
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:max="100"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:progress="35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        segmentedProgressView:segmentedProcess="10"
        segmentedProgressView:segmentedBgColor="@android:color/darker_gray"
        segmentedProgressView:segmentedProgressColor="@android:color/holo_green_dark"
        segmentedProgressView:segmentedTotal="30" />


    <com.xxm.review.view.SegmentedProgressViewV2
        android:layout_margin="10dp"
        android:id="@+id/progressBar2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintWidth_percent="0.5"
        segmentedProgressView:segmentedProcess="35"
        segmentedProgressView:segmentedBgColor="@android:color/darker_gray"
        segmentedProgressView:segmentedProgressColor="@android:color/holo_green_dark"
        segmentedProgressView:segmentedTotal="100" />

</androidx.constraintlayout.widget.ConstraintLayout>